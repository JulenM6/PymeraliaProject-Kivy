<ProfileScreen>:
    MDFloatLayout:
        id: main_layout

        MDFloatLayout:
            size_hint_x: 1 # grandària de la x
            size_hint_y: .15 # grandària de la y
            pos_hint: {"center_x": .5,"center_y": 0.85} # donar mesura
            canvas:
                Color:
                    rgb: (1, 1, 1, 1)
                Rectangle:
                #self fa referència a la classe actual de la instància, la classe és rectangle
                    size: self.size 
                    pos: self.pos
                    source: "assets/fondo.jpg" #imatge

        MDFloatLayout:
            AsyncImage: # cargamos la clase imagen asincrona
                id: imagen 
                size_hint_x: .300
                size_hint_y: .200
                pos_hint: {"center_x": .5, "center_y": .7}

        MDLabel:
            id: name
            text: ""
            pos_hint: {"center_y": 0.55} # posició del text
            halign: "center"
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1
            font_style: "H6" # tiempo de medida de lletra

        MDLabel:
            id: name1
            text: ""
            pos_hint: {"center_y": .48}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1

        MDLabel:
            id: name2
            text: ""
            pos_hint: {"center_y": .41}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1

        MDLabel:
            id: name3
            text: ""
            pos_hint: {"center_y": .34}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1