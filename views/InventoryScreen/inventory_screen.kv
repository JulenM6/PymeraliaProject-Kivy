<InventoryScreen>:
    id: inventory
    MDBoxLayout:
        orientation:"vertical"
        padding:0, 70, 0, 0
        SearchE4:
            id: search_field
            mode: "round"
            hint_text: "Buscar..."
            size_hint_x: 0.9
            pos_hint: {'center_x': 0.5}
            on_text: root.buscar(self.text)
        MDScrollView:
            MDList:
                id: listaDispositivos

    MDFloatingActionButton:
        pos_hint: {'center_y': 0.09, 'x': 0.83}
        on_release: root.open_camera()
        md_bg_color: app.theme_cls.primary_color
        MDIcon:
            icon: 'qrcode-scan'
            halign: 'center'