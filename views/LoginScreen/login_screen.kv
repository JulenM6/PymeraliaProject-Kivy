#:kivy 2.1.0
<ElevatedCard@MDCard>:
    orientation: 'vertical'
    style: 'elevated'

<LoginField@MDTextField>:
    mode: "fill"
    normal_color: app.theme_cls.primary_light
    pos_hint: {"center_x": 0.5}
    write_tab: False
    multiline: False

<LoginScreen>:
    md_bg_color: app.theme_cls.bg_dark
    FitImage:
        source:"assets/fondo.png"

    ElevatedCard:
        size_hint: 0.8, 0.8
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDBoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.6
            size_hint_y: 0.6
            spacing: dp(20)
            pos_hint: {"center_x": .5, "center_y": .6}
            Image:
                source: 'assets/logo_pymeshield.png'

        MDLabel:
            text: "Pymeshield"
            halign: 'center'
            size_hint_y: 0.1
            font_style: 'H4'
            text_color: app.theme_cls.primary_color

        MDLabel:
            text: "Iniciar sesión"
            halign: 'center'
            size_hint_y: 0.1
            font_style: 'H5'
            text_color: app.theme_cls.primary_color

        MDBoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.9
            size_hint_y: 0.6
            spacing: dp(20)
            pos_hint: {"center_x": .5, "center_y": .6}

            LoginField:
                id: email
                hint_text: "Correo electrónico"
                icon_right: "account"

            LoginField:
                id: password
                hint_text: "Contraseña"
                icon_right: "eye-off"
                password: True

            MDRaisedButton:
                text: "Entra"
                pos_hint: {"center_x": 0.5}
                on_release: root.do_login()
                font_size: sp(28)

            Widget:
                size_hint_y: 0.2