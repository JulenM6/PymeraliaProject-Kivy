#:kivy 2.1.0
<HomeScreen>:
    MDBoxLayout:
        orientation:'vertical'
        MDBoxLayout:
            size_hint_y:.10
            padding:dp(25)
            MDBoxLayout:
                orientation:"vertical"
        MDGridLayout:
            size_hint_y:.80
            cols:2
            padding:[dp(15),dp(15),dp(15),dp(0)]
            spacing:dp(15)
            ElementCard:
                name: "Perfil"
                image:"assets/perfil.png"
                text:"Perfil"
                on_release: root.manager.current="profile"
            ElementCard:
                name: "Informes"
                image:"assets/informes.png"
                text:"Informes"
                on_release: root.manager.current="report"

            ElementCard:
                name: "Cursos"
                image:"assets/cursos.png"
                text:"Cursos"
                on_release: root.manager.current="course"

            ElementCard:
                name: "Tareas"
                image:"assets/tareas.png"
                text:"Tareas"
                on_release: root.manager.current="tasks"
        MDGridLayout:
            size_hint_y:.40
            cols:1
            padding:[dp(15),dp(15),dp(15),dp(15)]
            ElementCard:
                name: "Inventario"
                image:"assets/inventario.png"
                text:"Inventario"
                on_release:root.manager.current="inventory"

<ElementCard@MDCard>:
    md_bg_color:app.theme_cls.primary_color
    padding:dp(15)
    spacing:dp(15)
    radius:dp(25)
    ripple_behavior: True
    image:''
    text:""
        
    orientation:'vertical'
    Image:
        source:root.image
    MDBoxLayout:
        orientation:'vertical'
        MDLabel:
            halign:"center"
            text:root.text
            font_style:"H6"